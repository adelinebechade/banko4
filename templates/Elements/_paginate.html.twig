{% if pagination is defined %}
    <nav class="text-right">
        <ul class="pagination">
            <li class="page-item {% if pagination.page <= 1 %}disabled{% endif %}">
                <a class="page-link" href="{{ path(app.request.attributes.get('_route'), app.request.query.all|merge(app.request.attributes.get('_route_params')|merge({'page': 1}))) }}{% if hash is defined %}{{ hash }}{% endif %}">&laquo;</a>
            </li>
            {% for p in range(max(pagination.page-4, 1), min(pagination.page+4, pagination.pages_count)) %}
                {% if p <= pagination.pages_count %}
                    <li class="page-item {% if p == pagination.page %}active disabled{% endif %}">
                        <a class="page-link" href="{{ path(app.request.attributes.get('_route'), app.request.query.all|merge(app.request.attributes.get('_route_params')|merge({'page': p}))) }}{% if hash is defined %}{{ hash }}{% endif %}">{{ p }}</a>
                    </li>
                {% endif %}
            {% endfor %}
            <li class="page-item {% if pagination.page >= pagination.pages_count %}disabled{% endif %}">
                <a class="page-link" href="{{ path(app.request.attributes.get('_route'), app.request.query.all|merge(app.request.attributes.get('_route_params')|merge({'page': pagination.pages_count}))) }}{% if hash is defined %}{{ hash }}{% endif %}">&raquo;</a>
            </li>
        </ul>
    </nav>
{% endif %}
