<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{{ 'project'|trans }} - {% block title %}{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('build/css/app.css') }}"/>
        <script src="{{ asset('build/js/app.js') }}"></script>
    </head>
    <body>
        <nav class="navbar navbar-dark fixed-top bg-dark flex-md-nowrap p-0 shadow">
            <a class="navbar-brand col-sm-3 col-md-2 mr-0" href="{{ path('dashboard') }}"><i class="fa fa-university"></i> {{ 'project'|trans }}</a>
            <ul class="navbar-nav px-3">
                <li class="nav-item text-nowrap">
                    <a class="nav-link" href="{{ path('easyadmin') }}" target="_blank"><i class="fa fa-database"></i> {{ 'admin'|trans }}</a>
                </li>
            </ul>
        </nav>

        <div class="container-fluid">
            <div class="row">
                <nav class="col-md-2 d-none d-md-block bg-light sidebar">
                    <div class="sidebar-sticky">
                        <ul class="nav flex-column">
                            <li class="nav-item">
                                <a class="nav-link {% if 'Dashboard' in app.request.get('_controller') %}active{% endif %}" href="{{ path('dashboard') }}">
                                    <i class="fa fa-home"></i>
                                    {{ 'dashboard'|trans }} <span class="sr-only">(current)</span>
                                </a>
                            </li>
                        </ul>
                        <hr>
                        <ul class="nav flex-column">
                            {% for compte in comptes() %}
                                <li class="nav-item">
                                    <a class="nav-link {% if 'compte/' ~ compte.id in app.request.pathinfo %}active{% endif %}"  href="{{ path('compte_edit', {id: compte.id, page: 1}) }}">
                                        <i class="fa fa-credit-card"></i>
                                        {{ compte.nom }}
                                    </a>
                                </li>
                            {% endfor%}
                        </ul>
                        <hr>
                        <ul class="nav flex-column">
                            <li class="nav-item">
                                <a class="nav-link {% if 'Nounou' in app.request.get('_controller') %}active{% endif %}" href="{{ path('nounou_index') }}">
                                    <i class="fa fa-user"></i>
                                    {{ 'nanny_salary'|trans }} <span class="sr-only">(current)</span>
                                </a>
                            </li>
                        </ul>
                        <hr>
                        <ul class="nav flex-column">
                            <li class="nav-item">
                                <a class="nav-link {% if 'Automatique' in app.request.get('_controller') %}active{% endif %}" href="{{ path('mouvement_automatique_index') }}">
                                    <i class="fa fa-euro-sign"></i>
                                    {{ 'common_fees'|trans }} <span class="sr-only">(current)</span>
                                </a>
                            </li>
                        </ul>
                        <hr>
                    </div>
                </nav>
            </div>
            {% block body %}{% endblock %}
        </div>
        {% block javascripts %}{% endblock %}
    </body>

