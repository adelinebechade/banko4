{% extends 'base.html.twig' %}

{% block title %}
    Mouvement - {{ mouvement.libelle }}
{% endblock %}

{% block body %}
    <main role="main" class="col-md-10 ml-sm-auto col-lg-10 px-4">
        <br/>
        <h1>{{ mouvement.compte.nom }} - <i>{{ mouvement.libelle }}</i></h1>
        <br/>
        {{ form_start(form) }}
            <div class="form-group">
                {{ form_widget(form.traite) }}
                {{ form_label(form.traite) }}
            </div>
            <div class="form-group">
                {{ form_row(form.libelle, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="form-group">
                {{ form_row(form.date, { 'attr': {'class': 'form-control', 'style': 'width:350px'} }) }}
            </div>
            <div class="form-group">
                {{ form_row(form.credit, { 'attr': {'class': 'form-control', 'style': 'width:100px'} }) }}
            </div>
            <div class="form-group">
                {{ form_row(form.debit, { 'attr': {'class': 'form-control', 'style': 'width:100px'} }) }}
            </div>

            <div class="form-group row">
                <div class="col-sm-10 col-sm-offset-2">
                    <a href="{{ app.request.headers.get('referer') }}" class="btn btn-light"><i class="fa fa-times"></i> {{ 'cancel'|trans }}</a>

                    <button id="save" type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Enregistrer</button>
                </div>
            </div>
        {{ form_rest(form) }}
        {{ form_end(form) }}
    </main>
{% endblock %}
